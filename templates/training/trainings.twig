{% extends "base.twig" %}

{% block main %}
    <div id="trainings">
        <div class="section">
            <h1 class="text-center">Investuj do sebe a přijď na školení</h1>

            <p class="text-center subtitle">
                Rozšiř si své know-how od odborníků v PHP.<br>
                Pořádáme školení na Docker, Elasticsearch, Doctrine, PHPStorm, Gitlab, CI + CD, X-Debug a další.
            </p>
        </div>

        <hr>

        <br>

        <div class="row">
            {% for upcoming_training_term in upcoming_training_terms %}
                {% set training = upcoming_training_term.getTraining() %}
                <div class="flex col-md-6">
                    <h2>
                        <a href="{{ path('training_detail', { 'slug': training.getSlug() }) }}/">
                            <strong>{{ training.getName()|raw }}</strong>
                        </a>
                    </h2>

                    <a href="{{ path('training_detail', { 'slug': training.getSlug() }) }}/" class="d-block text-center pt-xl-5 pb-xl-5 border-secondary border mb-3 mt-3">
                        {% if training.getImage() %}
                            <img src="{{ image_uploads }}/{{ training.getImage() }}" width="150" alt="">
                        {% endif %}

                        {% set trainer = training.getTrainer() %}
                        {% if trainer.getImage() %}
                            <img width="120" src="{{ image_uploads }}/{{ trainer.getImage() }}" class="img-thumbnail ml-5 rounded-circle pull-right" alt="">
                        {% endif %}
                    </a>

                    {% if training.getPerex() %}
                        <p>{{ training.getPerex()|raw }}</p>
                    {% endif %}

                    <div class="mt-4 mb-4 text-bigger">
                        <p>Příští termín: <strong>{{ training.getNearestTermDateTime()|date }}</strong></p>
                        <p class="text-danger">
                            Uzavírka přihlášek: <strong>{{ training.getNearestTermDeadline()|date }}</strong>
                        </p>
                    </div>

                    <p>
                        Lektor:
                        <strong>
                            {% if training.getTrainerWebsite() %}
                            <a href="{{ training.getTrainerWebsite() }}">
                                {% endif %}

                                {{ training.getTrainerName() }}

                                {% if training.getTrainerWebsite() %}
                            </a>
                            {% endif %}
                        </strong>
                    </p>

                    <a href="{{ path('registration', { 'slug': training.getNearestTermSlug() }) }}" class="btn btn-success btn-xs-block-only">
                        <em class="fa fa-fw fa-handshake"></em>
                        &nbsp;
                        Přihlaš se
                    </a>
                    <br>
                </div>
            {% endfor %}
        </div>

        <br>

        <div class="text-center text-smaller" id="tranings_without_term">
            <p>Další kurzy, které teď nemají vypsaný termín:</p>

            <p>
                {% for inactive_training in inactive_trainings %}
                    <a href="{{ path('training_detail', { 'slug': inactive_training.getSlug() }) }}/">
                        {{ inactive_training.getName()|raw }}
                    </a>
                    {% if loop.last == false %}&nbsp;•&nbsp;{% endif %}
                {% endfor %}
            </p>
        </div>

        <hr>

        <div class="text-center">
            <h2 class="mb-5">
                Přes 120 spokojených účastníků
            </h2>

            <div class="row narrower">
                {% for feedback in feedbacks %}
                    <div class="col-md-12 mb-5">
                        <q class="blockquote">{{ feedback.text }}</q>

                        {% if feedback.ratingContent %}
                            <div class="mb-3 mt-3">
                                {% for i in 1..feedback.ratingContent %}
                                    <em class="fas fa-2x fa-star text-warning"></em>
                                {% endfor %}
                            </div>
                        {% endif %}

                        <p class="mt-2">
                            {% if feedback.isAgreedWithPublishingName %}
                                {% if feedback.url %}<a href="{{ feedback.url }}">{% endif %}
                                {{ feedback.name }} o
                                {% if feedback.url %}</a>{% endif %}
                            {% else %}
                                Účastník školení
                            {% endif %}

                            <a href="{{ path('training_detail', {'slug': feedback.training.slug }) }}">
                                {{ feedback.training.name }}
                            </a>
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <hr>

    <div class="text-center">
        <h2>Už {{ total_training_term_count }} proběhlých školení</h2>

        {# @todo count unique trainers #}
