<header>
    {# normal menu #}
    <div class="hidden-sm-down">
        <div class="container-fluid">
            <a href="/"><img src="https://pehapkari.cz/assets/images/logo-header.svg?verver={{ random() }}" alt="" height="50"></a>
            <a href="/"><img src="/assets/images/logo-header.svg?ver" alt="" height="50"></a>

            <nav class="navbar top-navigation">
                <a href="{{ path('blog') }}" class="{{ active_item(['blog', 'post']) }}">
                    <em class="fa fa-newspaper fa-fw"></em>
                    Blog
                </a>
                {#<a href="{{ path('trainings') }}" class="{{ active_item(['trainings', 'training-detail']) }}">#}
                    {#<em class="fa fa-graduation-cap fa-fw"></em>#}
                    {#Školení#}
                {#</a>#}
            </nav>
        </div>
    </div>

    {# mobile menu #}
    <div id="mobile-menu" class="row text-center hidden-md-up">
        <div class="container">
            <a href="/" class="col-4 col-sm-4 {% if id is defined and id == 'index' %}active{% endif %}">
                <em class="fa fa-home"></em>
                <br>
                Home
            </a>
            <a href="/blog/" class="col-4 col-sm-4 {% if (id is defined and id == 'blog') or (layout is defined and layout == '_layouts/post.twig') %}active{% endif %}">
                <em class="fa fa-book fa-fw"></em>
                <br>
                Blog
            </a>
            <a href="/vzdelavej-se/" class="col-4 col-sm-4 {% if id is defined and id == 'lectures' %}active{% endif %}">
                <em class="fa fa-graduation-cap fa-fw"></em>
                <br>
                Školení
            </a>
        </div>
    </div>

    <div class="clearfix"></div>
</header>
