<div class="metadataLine">
    {% if post.tested is defined %}
        <p class="success">
            <strong>
                <em class="fa fa-fw fa-check-square-o"></em>
                This post is Tested
            </strong>
        </p>
    {% endif %}

    <p>
        Written by <strong>{{ authors[post.author].name }}</strong>

        &ndash;

        <time datetime="{{ post.getDateInFormat('Y-m-D') }}">
            {{ post.getDateInFormat('j. n. Y') }}
        </time>
    </p>
</div>
