{% extends "base.twig" %}

{% block main %}
    <div id="article">
        <div class="container">
            <h1 class="h2 text-center">{{ post.title }}</h1>

            <div class="row text-center">
                <div class="col-md-12">
                    {% include "_snippets/post/post_metadata_line.twig" with { "post": post } %}
                </div>
            </div>

            <br>

            <div id="article-content">
                <p class="perex">{{ post.perex|raw }}</p>

                {{ post.content|raw }}
            </div>
        </div>

        <br>

        {% set relatedPosts = (post|related_items) %}

        {% if relatedPosts|length %}
            <div class="intermezzo">
                <div class="container">
                    <h2>You Might Also Like</h2>

                    <ul id="related-posts">
                        {% for relatedPost in relatedPosts %}
                            <li>
                                <a href="/{{ relatedPost|link }}">{{ relatedPost.title }} &raquo;</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}

        <div class="container">
            {% include "_snippets/disqus_comments.twig" with { 'post': post, 'showCommentCount': true } %}
        </div>

        <br>
    </div>

    <script id="dsq-count-scr" src="https://{{ disqus_name }}.disqus.com/count.js" async defer></script>
{% endblock %}
