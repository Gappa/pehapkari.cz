{% extends 'base.twig' %}

{% block main %}
    <div class="container section" id="blog">
        <h1 class="text-center">Přečti si o PHP od svých kolegů</h1>

        <br>

        <div class="text-center">
            <a href="{{ path('rss') }}" class="btn btn-warning mr-3">
                <em class="fas fa-fw fa-rss"></em>
            </a>

            <a href="https://twitter.com/pehapkari" class="btn btn-info">
                <em class="fab fa-fw fa-twitter"></em>
            </a>
        </div>

        <hr>

        {% for post in posts %}
            {% if post.getDateInFormat('Y-m-d') <= "now"|date('Y-m-d') %}
                <div class="article mb-5">
                    <h2>
                        <a href="/{{ post|link }}/">{{ post.title }}</a>
                    </h2>

                    <div class="row">
                        <div class="col-md-12">
                            {% include "_snippets/post/post_metadata_line.twig" with { "post": post } %}
                        </div>
                    </div>

                    <p class="perex text-left">{{ post.perex|raw }}</p>
                </div>
                {% if loop.last == false %}<hr>{% endif %}
            {% endif %}
        {% endfor %}
        <br>
    </div>

{% endblock %}
