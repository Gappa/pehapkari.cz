{% extends 'base.twig' %}

{% block main %}
    <div class="container" id="blog">
        <div class="page-header">
            <h1>Přečti si o PHP od svých kolegů</h1>

            <p>
                ...taky <a href="https://github.com/pehapkari/pehapkari.cz/edit/master/statie/source/_posts/2019/2019-12-31-new-post.md">přidej článek</a> a buď vidět
            </p>

            <br>
        </div>

        {# show only posts not in the future date #}
        {% set was_first_post_marked = false %}

{#        <div class="card-columns">#}
            {% for post in posts if post.getDateInFormat('Y-m-d') <= "now"|date('Y-m-d')  %}
                {% if was_first_post_marked == false %}
                    {# special case for first post - full width #}
                    <div class="article mb-5">
                        <div class="card">
                            <div class="card-body">
                                <h2>
                                    <a href="/{{ post|link }}/">{{ post.title }}</a>
                                </h2>

                                {% include "_snippets/post/post_metadata_line.twig" with { "post": post } %}

                                <p class="perex text-left">{{ post.perex|raw }}</p>
                            </div>
                        </div>
                    </div>

                   <div class="card-columns">
            {% else %}
                    <div class="article mb-5 card">
                        <div class="card-body">
                            <h2>
                                <a href="/{{ post|link }}/">{{ post.title }}</a>
                            </h2>

                            <div class="author">
                                {% if post.author matches '#^\\d+$#' %}
                                    {{ authors[post.author].name }}
                                {% else %}
                                    {{ post.author }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer post-date">
                            <time datetime="{{ post.getDateInFormat('Y-m-D') }}">
                                {{ post.getDateInFormat('j. n. Y') }}
                            </time>
                        </div>
                    </div>
                {% endif %}

                {% set was_first_post_marked = true %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
