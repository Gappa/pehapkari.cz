{% extends 'base.twig' %}

{% set page_title %}Chci na školení "{{ training.getName() }}"{% endset %}

{% block main %}
    <div id="trainings" class="container">
        <h1>{{ page_title }}</h1>

        {# table? #}
        <div class="row">
            <div class="col-6">
                <div class="card shadow-card">
                    <div class="card-body card-form">
                        {# this alternative theme is also available #}
                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                        {{ form(form) }}
                    </div>
                </div>
            </div>

            <div class="col-6 pl-5">
                <h3>Kdy?</h3>
                <p class="mb-5">
                    {{ trainingTerm|from_to }}
                </p>

                <h3>Kde?</h3>
                <p class="mb-5">
                    <a href="{{ path('place_detail') }}">Jablotron v Holešovicích, Praha</a>
                </p>

                <h3>Cena?</h3>
                <p class="mb-5">
                    {{ trainingTerm.price|number_format }} Kč
                </p>
            </div>
        </div>
    </div>

    <br>
    <br>
{% endblock %}
