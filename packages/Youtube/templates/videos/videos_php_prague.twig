{% extends 'base.twig' %}

{% block main %}
    <div id="videos" class="container">
        <div class="page-header">
            <h1>Have you missed PHP Prague?</h1>

            <p>We organize international PHP conference in Prague every 2 years.</p>
        </div>

        {% for playlist in playlists %}
            <h2 class="text-center">{{ playlist.title }}</h2>

            <div class="row">
                {% for video in playlist.videos %}
                    {% include "_snippet/video_row.twig" %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
