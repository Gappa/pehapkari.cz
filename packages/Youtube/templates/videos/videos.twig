{% extends 'base.twig' %}

{% block main %}
    <div id="videos">
        <div class="section">
            <h1 class="text-center">Přehraj si přednášku z minulého srazu</h1>

            <h2>Meetupy</h2>

            <ul>
                {% for playlist in meetup_playlists %}
                    <li><a href="#{{ playlist.title|webalize }}">{{ playlist.title }}</a></li>
                {% endfor %}
            </ul>

            {% for playlist in meetup_playlists %}
                <h2 id=#{{ playlist.title|webalize }}"">{{ playlist.title }}</h2>

                <p>{{ playlist.published_at|date("j. n. Y") }}</p>

                <div class="row">
                    {% for video in playlist.videos %}
                        {% include "_snippet/youtube_video.twig" %}
                    {% endfor %}
                </div>

                <hr>
            {% endfor %}

            <hr>

            <h2>Listreamy</h2>

            <div class="row">
                {% for video in livestream_playlist.videos %}
                    {% include "_snippet/youtube_video.twig" %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
