{% extends 'base.twig' %}

{% block main %}
    <div id="videos">
        <div class="section">
            <h1 class="text-center">Přehraj si přednášku z minulého srazu</h1>

            <a href="{{ path('livestream') }}">Livestreamy</a>

            <h2>Meetupy</h2>

            <ul>
                {% for playlist in meetup_playlists %}
                    <li><a href="#{{ playlist.title|webalize }}">{{ playlist.title }}</a></li>
                {% endfor %}
            </ul>

            {% for playlist in meetup_playlists %}
                <h2 id="{{ playlist.title|webalize }}" class="text-center">{{ playlist.title }}</h2>

                <div class="row">
                    {% for video in playlist.videos %}
                        {% include "_snippet/video_row.twig" %}
                    {% endfor %}
                </div>

                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
